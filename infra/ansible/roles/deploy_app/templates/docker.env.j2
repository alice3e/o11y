# Docker environment configuration
COMPOSE_PROJECT_NAME={{ compose_project_name | default('microservices') }}

# Application settings
APP_ENV={{ app_environment | default('production') }}
DEBUG={{ debug_mode | default('false') }}

# Database settings
CASSANDRA_HOSTS={{ cassandra_hosts | default('cassandra:9042') }}
CASSANDRA_KEYSPACE={{ cassandra_keyspace | default('ecommerce') }}

# Authentication
JWT_SECRET={{ jwt_secret | default('your-secret-key') }}
JWT_EXPIRATION={{ jwt_expiration | default('3600') }}

# Monitoring
PROMETHEUS_URL={{ prometheus_url | default('http://prometheus:9090') }}
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password | default('admin') }}

# Alerting
ALERTMANAGER_BOT_TOKEN={{ alertmanager_bot_token }}
ALERTMANAGER_CHAT_ID={{ alertmanager_chat_id | default('-1002852417922') }}

# Service URLs
BACKEND_URL={{ backend_url | default('http://backend:8000') }}
CART_SERVICE_URL={{ cart_service_url | default('http://cart-service:8001') }}
ORDER_SERVICE_URL={{ order_service_url | default('http://order-service:8002') }}
USER_SERVICE_URL={{ user_service_url | default('http://user-service:8003') }}
